{
    "behaviors":[
        {
            "name": "show-title",
            "title": "Display page title",
            "desc": "Default rendering value for page title",
            "options":[
                {
                    "name":"Yes",
                    "value":true
                },
                {
                    "name":"No",
                    "value":false
                }
            ],
            "type": "select",
            "default":1,
            "valid":["page"]
        },
        {
            "name": "title-position",
            "title": "Title position",
            "desc": "Default title positioning in pages",
            "type": "select",
            "options":[
                {
                    "name":"Top",
                    "value":"top"
                },
                {
                    "name":"Bottom",
                    "value":"bottom"
                }
            ],
            "default":"top",
            "valid":["page"]
        },
        {
            "name": "layout",
            "title": "Body layout",
            "desc": "Default body layout for posts and pages",
            "options":[
                {
                    "name":"Full width. No sidebar.",
                    "value":"full-width"
                },
                {
                    "name":"Sidebar right",
                    "value":"sidebar-right"
                },
                {
                    "name":"Sidebar left",
                    "value":"sidebar-left"
                }
            ],
            "type": "select",
            "default":"sidebar-right",
            "valid":["post","page"]
        }
    ]
}